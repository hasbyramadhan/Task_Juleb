<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_template_form" model="ir.ui.view">
            <field name="name">product.template.form</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="default_code"/>
                            <field name="barcode"/>
                            <field name="cost"/>
                            <field name="list_price"/>
                            <field name="tracking"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Menu untuk mengimpor data -->
        <menuitem id="menu_import_product" name="Import Products" parent="base.menu_configuration" sequence="40"/>
        <menuitem id="menu_import_product_template" name="Product Templates" parent="menu_import_product" action="action_import_product_template"/>
        
        <!-- Aksi untuk mengimpor data -->
        <record id="action_import_product_template" model="ir.actions.act_window">
            <field name="name">Import Product Templates</field>
            <field name="res_model">product.import.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_product_import_wizard_form"/>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="context">{'default_model': 'product.template'}</field>
        </record>

        <!-- Tampilan wizard untuk mengimpor data -->
        <record id="view_product_import_wizard_form" model="ir.ui.view">
            <field name="name">product.import.wizard.form</field>
            <field name="model">product.import.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Products">
                    <group>
                        <field name="data_file" filename="File" widget="binary" accept="*.xls,*.xlsx"/>
                        <field name="import_option" widget="selection"/>
                    </group>
                    <footer>
                        <button name="import_product_data" string="Import" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
